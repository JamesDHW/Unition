<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="30dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:text="-" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:id="@+id/ll_user_profile_name_layout">

                <TextView
                    android:id="@+id/tv_user_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_margin="15dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/tv_user_uni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_margin="15dp"
                    android:text="Uni" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:id="@+id/ll_user_profile_degree_layout">

                <TextView
                    android:id="@+id/tv_user_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="-" />

                <Button
                    android:id="@+id/btn_send_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:text="Send Message"
                    android:textSize="10sp"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btn_link_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:text="Link up"
                    android:textSize="10sp"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btn_de_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:text="De-link"
                    android:textSize="10sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:text="Skills" />

            <TextView
                android:id="@+id/tv_user_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/colorBackground"
                android:text="-" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:text="Bio" />

            <TextView
                android:id="@+id/tv_user_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/colorBackground"
                android:text="-" />
        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/frame_layout_loading_user"
        android:layout_below="@+id/nav_login_btns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:translationZ="1dp"
        android:background="#7F000000"/>

</RelativeLayout>